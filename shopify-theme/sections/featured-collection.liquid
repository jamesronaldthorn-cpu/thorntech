<div class="featured-collection-section">
  <div class="container">
    <div class="section-header">
      <div class="header-title">
        <h2>{{ section.settings.heading }} <span class="highlight">{{ section.settings.heading_highlight }}</span></h2>
        <div class="title-underline"></div>
      </div>
      {%- if section.settings.collection != blank -%}
      <a href="{{ section.settings.collection.url }}" class="view-all-link">
        View All Products
        <svg viewBox="0 0 24 24" width="16" height="16" stroke="currentColor" stroke-width="2" fill="none"><polyline points="9 18 15 12 9 6"></polyline></svg>
      </a>
      {%- endif -%}
    </div>

    <div class="product-grid">
      {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
        {% render 'product-card', product: product %}
      {%- else -%}
        <!-- Placeholder products if no collection selected -->
        {%- for i in (1..section.settings.products_to_show) -%}
          <div class="product-card">
            <div class="product-image-wrap placeholder">
              {{ 'product-' | append: i | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
            <div class="product-info">
              <h3 class="product-title">Example Hardware {{ i }}</h3>
              <div class="product-price">Â£299.99</div>
              <button class="btn btn-secondary w-full">ADD TO BASKET</button>
            </div>
          </div>
        {%- endfor -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading part 1",
      "default": "LATEST"
    },
    {
      "type": "text",
      "id": "heading_highlight",
      "label": "Heading highlight",
      "default": "DROPS"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 4,
      "max": 12,
      "step": 4,
      "default": 8,
      "label": "Maximum products to show"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}