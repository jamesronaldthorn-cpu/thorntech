<div class="hero-section" style="{% if section.settings.image != blank %}background-image: url({{ section.settings.image | image_url: width: 1920 }});{% endif %}">
  <div class="hero-overlay"></div>
  <div class="hero-content">
    {%- if section.settings.badge_text != blank -%}
    <div class="hero-badge">
      <span class="pulse-dot"></span>
      {{ section.settings.badge_text }}
    </div>
    {%- endif -%}
    
    <h2 class="hero-title">
      {{ section.settings.heading }}<br/>
      <span class="tech-gradient-text">{{ section.settings.heading_highlight }}</span>
    </h2>
    
    <p class="hero-text">{{ section.settings.text }}</p>
    
    <div class="hero-buttons">
      {%- if section.settings.btn_1_text != blank -%}
      <a href="{{ section.settings.btn_1_link }}" class="btn btn-primary">
        {{ section.settings.btn_1_text }}
      </a>
      {%- endif -%}
      
      {%- if section.settings.btn_2_text != blank -%}
      <a href="{{ section.settings.btn_2_link }}" class="btn btn-outline">
        {{ section.settings.btn_2_text }}
        <svg viewBox="0 0 24 24" width="16" height="16" stroke="currentColor" stroke-width="2" fill="none"><polyline points="9 18 15 12 9 6"></polyline></svg>
      </a>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "UK's Premier PC Hardware Store"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading Part 1",
      "default": "BUILD YOUR"
    },
    {
      "type": "text",
      "id": "heading_highlight",
      "label": "Heading Gradient Part",
      "default": "ULTIMATE RIG"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description text",
      "default": "Premium PC components, bespoke water-cooled builds, and enthusiast peripherals."
    },
    {
      "type": "text",
      "id": "btn_1_text",
      "label": "Button 1 Text",
      "default": "SHOP ALL COMPONENTS"
    },
    {
      "type": "url",
      "id": "btn_1_link",
      "label": "Button 1 Link"
    },
    {
      "type": "text",
      "id": "btn_2_text",
      "label": "Button 2 Text",
      "default": "CUSTOM PC BUILDER"
    },
    {
      "type": "url",
      "id": "btn_2_link",
      "label": "Button 2 Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}