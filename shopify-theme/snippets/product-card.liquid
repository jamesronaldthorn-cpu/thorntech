<div class="product-card group">
  <div class="product-image-wrap">
    {%- if product.tags contains 'new' -%}
      <div class="badge badge--new">New Release</div>
    {%- elsif product.compare_at_price > product.price -%}
      <div class="badge badge--sale">Sale</div>
    {%- endif -%}
    
    <a href="{{ product.url }}">
      <img 
        src="{{ product.featured_image | image_url: width: 500 }}" 
        alt="{{ product.featured_image.alt | escape }}"
        loading="lazy"
        width="{{ product.featured_image.width }}"
        height="{{ product.featured_image.height }}"
        class="product-image"
      >
    </a>
  </div>
  
  <div class="product-info">
    <div class="product-vendor">{{ product.vendor }}</div>
    <h3 class="product-title">
      <a href="{{ product.url }}">{{ product.title | escape }}</a>
    </h3>
    
    <div class="product-price-wrapper">
      {%- if product.compare_at_price > product.price -%}
        <s class="product-compare-price">{{ product.compare_at_price | money }}</s>
      {%- endif -%}
      <span class="product-price">{{ product.price | money }}</span>
    </div>
    <div class="tax-note">inc. VAT</div>
    
    <div class="product-actions">
      <form method="post" action="/cart/add">
        <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
        <button type="submit" class="btn btn-outline w-full" {% unless product.available %}disabled{% endunless %}>
          {% if product.available %}
            ADD TO BASKET
          {% else %}
            SOLD OUT
          {% endif %}
        </button>
      </form>
    </div>
  </div>
</div>